{
  "name": "FootyChants",
  "version": "1.0",
  "description": "Footy chants",
  "permissions": [
    "activeTab",
    "storage",
    "declarativeContent"
  ],
  "content_security_policy": "script-src 'self' 'unsafe-eval'; object-src 'self'",
  "browser_action": {
    "default_icon": "src/assets/football.png",
    "default_popup": "src/html/popup.html",
    "default_title": "Footy Chant Extension"
  },
  "icons": {
    "16": "src/assets/football.png",
    "32": "src/assets/football.png",
    "48": "src/assets/football.png",
    "128": "src/assets/football.png"
  },
  "content_scripts": [
    {
      "matches": [
        "http://*/",
        "https://*/"
      ],
      "all_frames": true,
      "js": [
        "src/js/contentscript.js"
      ]
    }
  ],
  "web_accessible_resources": [
    "src/*/*",
    "https://www.fanchants.com/*"
  ],
  "manifest_version": 2
}