{
  "name": "FootyChants",
  "version": "1.0",
  "description": "Footy chants",
  "permissions": [
    "activeTab",
    "storage",
    "declarativeContent"
  ],
  "background": {
    "scripts": [
      "src/js/background.js"
    ],
    "persistent": false
  },
  "page_action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "src/assets/football.png",
      "32": "src/assets/football.png",
      "48": "src/assets/football.png",
      "128": "src/assets/football.png"
    }
  },
  "icons": {
    "16": "src/assets/football.png",
    "32": "src/assets/football.png",
    "48": "src/assets/football.png",
    "128": "src/assets/football.png"
  },
  "content_scripts": [],
  "web_accessible_resources": [
    "src/*/*"
  ],
  "manifest_version": 2
}