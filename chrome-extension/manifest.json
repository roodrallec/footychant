{
  "manifest_version": 2,
  "name": "Footy Chants",
  "short_name": "Footy Chants",
  "version": "0.0.1",
  "description": "Listen to your favorite football chants while watching football.",
  "permissions": [],
  "browser_action": {
    "default_popup": "popup/index.html",
    "default_title": "Footy Chants"
  },
  "icons": {
    "512": "./assets/football.png"
  },
  "content_scripts": [],
  "background": {
    "scripts": [
      "background.js"
    ],
    "persistent": false
  },
  "web_accessible_resources": [
    "https://www.fanchants.com/media/chants/full/download/*",
    "assets/chant.wav"
  ]
}
